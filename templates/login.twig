{% extends 'base.twig' %}

{% block title %}Login | TicketApp{% endblock %}

{% block content %}
  <div class="auth-container-tall">
    <h2 class="auth-heading">Welcome Back!</h2>

    {% if errors.general %}
      <div class="alert-error">{{ errors.general }}</div>
    {% endif %}

    <form method="POST" action="/login">
      <div class="form-group">
        <label for="email" class="form-label-spaced">Email Address</label>
        <input 
          id="email" 
          type="email" 
          name="email"
          placeholder="Enter your email" 
          class="form-input {{ errors.email ? 'error' : '' }}"
        />
        {% if errors.email %}
          <p class="error-message">{{ errors.email }}</p>
        {% endif %}
      </div>

      <div class="form-group">
        <label for="password" class="form-label-spaced">Password</label>
        <input 
          id="password" 
          type="password" 
          name="password"
          placeholder="Enter your password" 
          class="form-input mb-3 {{ errors.password ? 'error' : '' }}"
        />
        {% if errors.password %}
          <p class="error-message">{{ errors.password }}</p>
        {% endif %}
      </div>

      <button type="submit" class="btn-primary">
        Sign In
      </button>

      <div class="auth-footer-spaced">
        <p class="auth-footer-text">Don't have an account?</p>
        <a href="/signup" class="btn-link">Register Here</a>
      </div>
    </form>
  </div>
{% endblock %}
