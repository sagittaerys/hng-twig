{% extends "base.twig" %}

{% block content %}
<section class="signup-container">
  <h2 class="signup-heading">Create Account</h2>

  {% if errors.general %}
    <div class="alert-error">{{ errors.general }}</div>
  {% endif %}

  {% if successMessage %}
    <div class="alert-success">{{ successMessage }}</div>
  {% endif %}

  <form method="POST" action="/signup">
    <div class="form-group">
      <label for="name" class="form-label">Full Name</label>
      <input
        id="name"
        type="text"
        name="name"
        placeholder="Enter your full name"
        value="{{ formData.name|default('') }}"
        class="form-input {% if errors.name %}error{% endif %}"
      />
      {% if errors.name %}
        <p class="error-message">{{ errors.name }}</p>
      {% endif %}
    </div>

    <div class="form-group">
      <label for="email" class="form-label">Email Address</label>
      <input
        id="email"
        type="email"
        name="email"
        placeholder="Enter email address"
        value="{{ formData.email|default('') }}"
        class="form-input {% if errors.email %}error{% endif %}"
      />
      {% if errors.email %}
        <p class="error-message">{{ errors.email }}</p>
      {% endif %}
    </div>

    <div class="form-group">
      <label for="password" class="form-label">Password</label>
      <input
        id="password"
        type="password"
        name="password"
        placeholder="Enter your password (8+ characters)"
        class="form-input {% if errors.password %}error{% endif %}"
      />
      {% if errors.password %}
        <p class="error-message">{{ errors.password }}</p>
      {% endif %}
    </div>

    <div class="form-group-last">
      <label for="confirmPassword" class="form-label">Confirm Password</label>
      <input
        id="confirmPassword"
        type="password"
        name="confirmPassword"
        placeholder="Confirm password"
        class="form-input {% if errors.confirmPassword %}error{% endif %}"
      />
      {% if errors.confirmPassword %}
        <p class="error-message">{{ errors.confirmPassword }}</p>
      {% endif %}
    </div>

    <button
      type="submit"
      class="sign-up-btn"
      {% if isLoading %}disabled{% endif %}
    >
      {% if isLoading %}
        Creating Account...
      {% else %}
        Create Account
      {% endif %}
    </button>

    <div class="login-route">
      <p>Already have an account?</p>
      <a href="/login" class="linking">Sign In</a>
    </div>
  </form>
</section>
{% endblock %}

